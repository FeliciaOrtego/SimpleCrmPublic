@model SimpleCrm.Web.Models.Home.CustomerEditViewModel
@using SimpleCrm
@using SimpleCrm.Web;
@{
	ViewBag.Title = "Create";
}

<h1>Create</h1>
<div>@Html.ValidationSummary()
@using (Html.BeginForm())
{
	<div>
	@Html.LabelFor(x => x.FirstName)
	@Html.EditorFor(x => x.FirstName)
	@Html.ValidationMessageFor(x => x.FirstName)
	</div>
	<div>
	@Html.LabelFor(x => x.LastName)
	@Html.EditorFor(x => x.LastName)
	@Html.ValidationMessageFor(x => x.LastName)
	</div>
	<div>
	@Html.LabelFor(x => x.PhoneNumber)
	@Html.EditorFor(x => x.PhoneNumber)
	@Html.ValidationMessageFor(x => x.PhoneNumber)
	</div>
	<div>
		@Html.DropDownListFor(x => x.Type, Html.GetEnumSelectList(typeof(SimpleCrm.CustomerType)))
	</div>
	<div>
		@Html.LabelFor(x => x.OptInNewsletter)
		@Html.CheckBoxFor(x => x.OptInNewsletter)
	</div>
	<div>
		<input type = "submit" value="Save" />
	</div>
}
</div>